# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dns_manager
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# PowerDNS API Configuration (if using real PowerDNS)
PDNS_API_URL=http://powerdns:8081
PDNS_API_KEY=your_powerdns_api_key

# Use mock DNS server (set to true for testing without PowerDNS)
USE_MOCK_DNS=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
