# DNS Manager Environment Configuration

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dns_manager
DB_USER=postgres
DB_PASSWORD=your_secure_password_change_me

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# PowerDNS Configuration (optional - for real DNS server)
USE_MOCK_DNS=true
PDNS_API_URL=http://powerdns:8081
PDNS_API_KEY=your_powerdns_api_key

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=http://localhost

# Node Environment
NODE_ENV=production
