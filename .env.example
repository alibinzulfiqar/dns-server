# DNS Manager Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# REQUIRED SETTINGS (Must be set in Coolify)
# ===========================================

# Database password - CHANGE THIS!
DB_PASSWORD=your_secure_password_change_me

# JWT Secret - CHANGE THIS! Use a long random string
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long

# PowerDNS API Key - CHANGE THIS!
PDNS_API_KEY=your_powerdns_api_key_change_me

# ===========================================
# OPTIONAL SETTINGS (Have sensible defaults)
# ===========================================

# Database Configuration
DB_HOST=dns-postgres
DB_PORT=5432
DB_NAME=dns_manager
DB_USER=postgres

# JWT Expiration
JWT_EXPIRES_IN=7d

# PowerDNS Configuration (set to false for real DNS)
USE_MOCK_DNS=false

# Frontend Configuration
FRONTEND_URL=

# Node Environment
NODE_ENV=production
